<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl"
    tools:context=".activity.MainActivity">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/white"
        sl:scale_base_width="1080"
        sl:scale_base_height="1660"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/toolbar">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exhibition_back"
            sl:scale_left="0"
            sl:scale_top="0"
            sl:scale_width="1085"
            sl:scale_height="759"/>



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_report_image"
            android:id="@+id/exhibition_icon"
            sl:scale_left="318"
            sl:scale_top="503"
            sl:scale_width="451"
            sl:scale_height="450"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exhibition_edge"
            sl:scale_left="295"
            sl:scale_top="480"
            sl:scale_width="490"
            sl:scale_height="490"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exhibition_txt"
            android:text="전시장"
            android:textColor="@color/black"
            android:background="#00000000"
            sl:scale_textsize="70"
            sl:scale_left="295"
            sl:scale_top="990"
            sl:scale_width="490"
            sl:scale_height="80"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cinema_btn"
            android:background="@drawable/effect_cin_button"
            sl:scale_left="88"
            sl:scale_top="1100"
            sl:scale_width="250"
            sl:scale_height="250"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/library_btn"
            android:background="@drawable/effect_lib_button"
            sl:scale_left="415"
            sl:scale_top="1100"
            sl:scale_width="250"
            sl:scale_height="250"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_btn"
            android:background="@drawable/effect_home_button"
            sl:scale_left="742"
            sl:scale_top="1100"
            sl:scale_width="250"
            sl:scale_height="250"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cinema_txt"
            android:text="영화관"
            android:textColor="@color/black"
            android:background="#00000000"
            sl:scale_textsize="40"
            sl:scale_left="88"
            sl:scale_top="1370"
            sl:scale_width="250"
            sl:scale_height="60"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/library_txt"
            android:text="도서관"
            android:textColor="@color/black"
            android:background="#00000000"
            sl:scale_textsize="40"
            sl:scale_left="415"
            sl:scale_top="1370"
            sl:scale_width="250"
            sl:scale_height="60"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_txt"
            android:text="홈"
            android:textColor="@color/black"
            android:background="#00000000"
            sl:scale_textsize="40"
            sl:scale_left="742"
            sl:scale_top="1370"
            sl:scale_width="250"
            sl:scale_height="60"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@android:drawable/ic_dialog_email"
        android:layout_marginEnd="15dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:elevation="4dp"
        android:background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/bottombar"
        android:elevation="4dp"
        android:background="@color/colorBottomtab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </android.support.v7.widget.Toolbar>


</RelativeLayout>
