<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/cocktail_home_icon"
            android:id="@+id/imageView" />
        <ImageView
            android:id="@+id/Greenbackground"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#87c117"
            android:scaleType="center"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Greenbackground"
            android:layout_alignLeft="@+id/Greenbackground"
            android:layout_alignRight="@+id/Greenbackground"
            android:layout_alignTop="@+id/Greenbackground"
            android:gravity="center"
            android:text="COCKTAIL"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <EditText
        android:id="@+id/context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="16dp"
        android:hint="불편사항을 입력해주세요"
        android:inputType="textPersonName" />
</LinearLayout>